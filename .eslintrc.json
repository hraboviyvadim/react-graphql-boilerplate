{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "plugins": ["prettier", "jest"],
  "rules": {
    "prettier/prettier": ["error"],
    "max-len": [0],
    "no-unused-vars": [1],
    "no-console": [1],
    "no-case-declarations": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
